FROM openjdk:8-jdk-alpine
VOLUME /tmp
ARG JAR_FILE
COPY ${JAR_FILE} app.jar
ENV BROKER_HOST_NAME=localhost
ENV BROKER_HOST_USERNAME=guest
ENV BROKER_HOST_PASSWORD=guest
ENV MONGO_HOST_NAME=localhost
ENTRYPOINT java -jar /app.jar $BROKER_HOST_NAME $BROKER_HOST_USERNAME $BROKER_HOST_PASSWORD $MONGO_HOST_NAME